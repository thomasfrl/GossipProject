<h1>Bienvenue, veuillez indiquer vos identifiants de connexion</h1>

<%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'Veuillez indiquer votre email' %>
    <%= text_field_tag 'email',nil, class: 'form-control' %>
    <br /> <br />

    <%= label_tag 'Mot de passe' %>
    <%= password_field_tag 'password',nil, class: 'form-control' %>
    <br /> <br />

    <%= submit_tag "Valider l'inscription ", class: 'btn btn-primary'%>

<% end %>

