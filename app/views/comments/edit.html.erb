<h1>Veuillez éditer vote commentaire</h1>

<%= form_tag url_for(action: 'update'), method: "put" do %>

    <%= label_tag 'Contenu' %>
    <%= text_area_tag 'content', @comment.content, class: 'form-control' %>
    <br /> <br />
   
    <%= submit_tag "Mettre à jour le commentaire" , class: 'btn btn-primary'%>

<% end %>